<header>
    <%= link_to logo, root_path  %>
    <nav class="round">
        <ul>
            <li><%= link_to "Home", root_path %></li>
            <% if signed_in? %>
						<li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Profile", current_user %></li>
            <% end %>
						<li><%= link_to "Mobile", mobileapps_path  %></li>
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <% if signed_in? %>
					
            <li><%= link_to "MyProjects", myprojects_path %></li>
	
            <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
            <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
        </ul>
    </nav>

		<%if ! signed_in? %>
			<navc class="button">
			<input type="image" src="images/sign_up_yellow_small.png" value="submit" alt="submit" onClick="parent.location='<%= signup_path  %>'"/>
			</navc>
		<% end %>
</header>
